{
	"$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
	"formatter": {
		"enabled": true,
		"indentStyle": "tab",
		"lineWidth": 100
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"style": {
				"useLiteralEnumMembers": "off",
				"noNonNullAssertion": "info"
			},
			"correctness":{ 
				"noSwitchDeclarations": "info"
			},
			"complexity": {
				"noBannedTypes": "warn"
			},
			"suspicious": {
				"noConstEnum": "off"
			}
		}
	},
	"css": {
		"formatter": {
			"enabled": true
		}
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "double"
		}
	}
}
